@Library('ToolsPipelineLib') _


pipeline {
    agent {
        kubernetes (
            cloud: 'kubi-linux',
            inheritFrom: 'default',
            containerTemplates: [
                containerTemplate(
                    name: 'openvino',
                    image: 'ger-registry.caas.intel.com/movitools/nntools:openvino_1.8',
                    command: 'cat',
                    resourceRequestCpu: '8',
                    resourceLimitCpu: '8',
                    resourceLimitMemory: '32Gi',
                    ttyEnabled: true
                )
            ]
        )
    }
    environment {
        AF_TOKEN = credentials("CID-sys_mtbuild-af01p_ir-key_text")
        PYTHONUNBUFFERED = 1
        ARTIFACTORY_URL = "https://af01p-ir.devtools.intel.com/artifactory"
        ARTIFACTORY_KEY = credentials("CID-sys_mtbuild-af01p_ir-key_text")
        SSH_KEY = credentials("CID-1Source-SSH-Test")
        JFROG_CLI_OFFER_CONFIG = false
    }
    options {
        ansiColor('xterm')
        timestamps()
        buildDiscarder logRotator(artifactDaysToKeepStr: '', artifactNumToKeepStr: '', daysToKeepStr: '14', numToKeepStr: '14')
        disableConcurrentBuilds()
        timeout(time: 12, unit: 'HOURS')
        durabilityHint 'PERFORMANCE_OPTIMIZED'
        copyArtifactPermission('*')
        checkoutToSubdirectory('vpux_emulator')
        parallelsAlwaysFailFast()
    }
    stages {
        stage('Get version') {
            steps {
                container('jnlp') {
                    dir ("${env.WORKSPACE}") {
                        sh "env > env0.txt"
                        
                        sh "git init ."
                        sh "git --version"

                        sh """
                            export GIT_SSH_COMMAND="ssh -i $SSH_KEY"
                            git clone git@github.com:SeptimiuIoachimNeagaIntel/JenkinsTest.git
                            env > env.txt
                        """
                        sh "ls -lrta"
                    }
                    withCredentials([sshUserPrivateKey(credentialsId: 'CID-1Source-SSH-Test', keyFileVariable: "SSH_PRIVATE_KEY_FILE")]) {
                        //sh "env | grep SSH_ > SSH_0.txt"
                        withEnv([GIT_SSH_COMMAND=${env.MOVIASM_STAGING_DIR}])
                            //sh "env | grep SSH_ > SSH_1.txt"
                            sh "rm -rf JenkinsTest"
                            sh 'git clone git@github.com:SeptimiuIoachimNeagaIntel/JenkinsTest.git'
                    }
                }
            }
            post {
                success {
                    archiveArtifacts "env0.txt"
                    archiveArtifacts "SSH_0.txt"
                    archiveArtifacts "SSH_1.txt"
                }
            }
        }
    }
}
